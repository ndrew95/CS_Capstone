#:import Clock kivy.clock.Clock
WindowManager:
    MainWindow:
    CreateWindow:
    SecondWindow:
    MapWindow:
    PopUpWindow:

<MainWindow>:
    name: "main"

    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50

        Label:
            text: 'Welcome'
            font_size: 32

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Login'
                font_size: 35
                halign: 'left'
               # text_size: root.width-20, 20

            TextInput:
                id: login
                multiline:False
                font_size: 28

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Password'
                halign: 'left'
                font_size: 35
                #text_size: root.width-20, 20

            TextInput:
                id: password
                multiline:False
                password:True
                font_size: 28

        Button:
            text: 'Connect'
            

            on_press: root.do_login(login.text, password.text)

        BoxLayout:
            orientation: 'vertical'
            Label:
                
                halign: 'left'
                font_size: 18
                text_size: root.width-40, 10
            Button:
                size_hint: 0.15, 0.15
                pos: root.width-self.width, root.height / 2 - self.height / 2
                text: "Sign Up"
                on_release:
                    app.root.current = 'create'
                    root.manager.transition.direction = "left"
    

<CreateWindow>:
    name: "create"

    BoxLayout
        id: create_acct
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50

        Label:
            text: 'Enter Details'
            font_size: 32

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Login'
                font_size: 35
                halign: 'left'
                #text_size: root.width-20, 20

            TextInput:
                id: login
                multiline:False
                font_size: 28

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Password'
                halign: 'left'
                font_size: 35
                #text_size: root.width-20, 20

            TextInput:
                id: password
                multiline:False
                password:True
                font_size: 28

        Button:
            text: 'Back to Login'
            #font_size: 24

            on_press: app.root.current = 'main'


<SecondWindow>:
    name: "second"
    on_enter: Clock.schedule_once(root.update_events, .5) 
    TabbedPanel:
        id: tp
        #size_hint: 1, 1
        pos_hint: {'center_x': .5, 'center_y': .5}
        do_default_tab: True
        default_tab: home_tab
        
        TabbedPanelItem:
            text: 'Results'
            

                
                
        TabbedPanelItem:
            text: 'D'
            id: home_tab
            
            BoxLayout:
                id: "1"
               # padding: 50, 50, 50, 50
                orientation: 'horizontal'
                
                        
                BoxLayout:
                    id: two
                    #padding: 100, 100, 100, 100
                    orientation: 'vertical'
                    halign: 'left'
                    valign: 'left'
                    CheckBox: 
                        text: 'CheckBox'
                    CheckBox: 
                        text: 'CheckBox'
                    CheckBox: 
                        text: 'CheckBox'
                BoxLayout:
                    id: "3"
                   # spacing: 200
                    halign: 'center'
                    #valign:
                    orientation: 'vertical'
                    id: events
                    Label:
                        text: "100 Meter Dash - Womens"
                        id: event1
                        #text_size: self.size
                        halign: 'left'
                        valign: 'center'
                    Label:
                        text: "400 Meter Relay - Womens"
                        id: event2
                        valign: 'center'
                        #text_size: self.size
                        halign: 'left'
                    Label:
                        text: "Shot-put - Mens"
                        id: event3
                       # text_size: self.size
                        halign: 'left'
                        valign: 'center'
                BoxLayout:
                    id: "4"
                    valign: 'bottom'
                    #spacing: 0
                    #size_hint: .5, .5
                    #text_size: 
                    #size_hint: (None, None)
                    #size: (dp(56), dp(56))
                    #pos_hint:{'right': 1}
                    
                    
                    Button:
                        id: ellipse
                        #size_hint: (None, None)
                        size: (dp(56), dp(56))
                        pos_hint:{'right': 1}
                        text: "refresh"
                        halign: 'right'
                        valign: 'bottom'
                        on_press: root.update_events(.5)
                
                    
                    
                    Button:
                        id: submit
                        #size_hint: (None, None)
                        size: (dp(56), dp(56))
                        pos_hint:{'left': 1}
                        text: "Submit Interest"
                        halign: 'left'
                        valign: 'bottom'
                        on_release: root.reset_checkbox()
                    #pos_hint: {'right': 1, 'bottom': 1} 
        TabbedPanelItem:

            text: "Map"

            on_press: app.root.current = 'map'
        
<MapWindow>:
    name: 'map'
    
    BoxLayout: 
        Button:

            size_hint: 0.15, 0.15
            pos: root.width-self.width, root.height / 2 - self.height / 2
            text: 'Back'
            #top: root.top
            on_press: app.root.current = 'second'
        MapView:
            id: map
            id: mapview
            lat: 41.605
            lon: -93.655
            zoom: 17

<PopUpWindow>:
    name: 'popup'
    MapMarkerPopup:
        id: marker
        lat: 41.605
        lon: -93.655
        popup_size: 400,400

