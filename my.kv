#:import Clock kivy.clock.Clock
WindowManager:
    MainWindow:
    CreateWindow:
    SecondWindow:
    MapWindow:
    PopUpWindow:

<MainWindow>:
    name: "main"
    canvas.before:
        #Color: 
           # rgba: 0, 0, 1, 1
        Rectangle:
            pos: (self.pos)
            size: self.size

            source: 'drake.jpg'
    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50

        Label:
            #text: 'Welcome'
            #font_size: 32

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Login'
                font_size: 35
                halign: 'left'
               # text_size: root.width-20, 20

            TextInput:
                id: login
                multiline:False
                font_size: 28

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Password'
                halign: 'left'
                font_size: 35
                #text_size: root.width-20, 20

            TextInput:
                id: password
                multiline:False
                password:True
                font_size: 28

        Button:
            text: 'Connect'
            
            on_release: root.login_user()
            on_press: root.do_login(login.text, password.text)

        BoxLayout:
            orientation: 'vertical'
            Label:
                
                halign: 'left'
                font_size: 18
                text_size: root.width-40, 10
            Button:
                size_hint: 0.15, 0.15
                pos: root.width-self.width, root.height / 2 - self.height / 2
                text: "Sign Up"
                on_release:
                    app.root.current = 'create'
                    root.manager.transition.direction = "left"
    

<CreateWindow>:
    name: "create"
    canvas.before:
        #Color: 
           # rgba: 0, 0, 1, 1
        Rectangle:
            pos: (self.pos)
            size: self.size

            source: 'drake.jpg'
    BoxLayout
        id: create_acct
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50

        Label:
            text: 'Enter Details'
            font_size: 32

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Login'
                font_size: 35
                halign: 'left'
                #text_size: root.width-20, 20

            TextInput:
                id: login
                multiline:False
                font_size: 28

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Password'
                halign: 'left'
                font_size: 35
                #text_size: root.width-20, 20

            TextInput:
                id: password
                multiline:False
                password:True
                font_size: 28

        Button:
            text: 'Back to Login'
            #font_size: 24
            on_press: root.Create_Account(login.text, password.text)
            on_release: app.root.current = 'main'


